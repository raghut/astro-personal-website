---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">Hey there ðŸ‘‹</div>
      <div class="text-5xl font-bold">I'm Raghavendra Teegela</div>
      <div class="text-3xl py-3 font-bold">Software Development Manager</div>
      <div class="py-2">
        <text class="text-lg">
          Experienced software development manager with a proven track record of leading and managing successful software development projects. Skilled in setting project goals, developing project plans, and tracking progress to ensure on-time delivery. Possesses strong leadership, communication, and interpersonal skills. Deeply knowledgeable in software development methodologies and tools, as well as experience working with a range of programming languages and technologies. Passionate about delivering innovative solutions and driving continuous improvement.
          </text
        >
      </div>
      <div class="mt-8">
        <a class="btn" href="https://www.linkedin.com/in/raghu-t/" target="_blank"> Let's connect!</a>
      </div>
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
    </div>

    <HorizontalCard
      title="SaaS MarketPlace"
      img="/post_img.webp"
      desc="Discover and purchase 100+ business softwares at discounted rates. And single place to manage all your softwares"
      url="https://gonuclei.com/product/sumarise"
      badge="NEW"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Arise"
    img="/post_img.webp"
    desc="Now access your recurring payment services as subscriptions, and bundle existing subscriptions at discounted prices."
    url="https://gonuclei.com/product/ARISE"
  />
    <div class="divider my-0"></div>
    <HorizontalCard
    title="Merchant Marketplace"
    img="/post_img.webp"
    desc="We empower Banks to transform their Digital Banking experience by integrating our cutting edge platform. This help Banks to significantly & intelligently enhance relationship with their customer base."
    url="https://gonuclei.com/product/merchant-marketplace"
    badge=""
  />


    <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
    </div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={post.data.url}
          badge={post.data.badge}
        />
        <div class="divider my-0"></div>
      ))
    }

</BaseLayout>
